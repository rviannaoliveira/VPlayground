<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cloud"
        tools:context=".SceneOne">

    <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/vegeta"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:id="@+id/backgroundImageBeforeSSB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/vegeta_before_ssb"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/backgroundImageSSB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/vegetassb"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="8dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:text="AHHHHHH!!!!!!!!!"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintRight_toLeftOf="@+id/backgroundImage"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingBottom="8dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:text="Próximo >"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/title"/>
    <View
            android:id="@+id/fadeBackgroudView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/gradient_variant"
            app:layout_constraintBottom_toTopOf="@+id/description"/>

    <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Enquanto o inimigo estiver na minha frente, eu lutarei."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eu sou o príncipe dos saiyadins!!"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="#181818"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/backgroundImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ki1"
            android:layout_width="@dimen/ki"
            android:layout_height="@dimen/ki"
            android:src="@drawable/luz"
            android:layout_marginStart="50dp"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ki2"
            android:layout_width="@dimen/ki"
            android:layout_height="@dimen/ki"
            android:src="@drawable/luz"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/ki1"
            app:layout_constraintTop_toBottomOf="@+id/description"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ki3"
            android:layout_width="@dimen/ki"
            android:layout_height="@dimen/ki"
            android:src="@drawable/luz"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toEndOf="@+id/ki2"
            app:layout_constraintTop_toBottomOf="@+id/description"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ki4"
            android:layout_width="@dimen/ki"
            android:layout_height="@dimen/ki"
            android:src="@drawable/luz"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toEndOf="@+id/ki3"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>
